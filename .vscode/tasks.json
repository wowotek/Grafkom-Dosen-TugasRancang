{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make all",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Launch",
            "type": "process",
            "command": "${workspaceRoot}/build/bin/TR.exec",
            "group": "test",
            "options": {
                "cwd": "${workspaceRoot}/build/bin"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build and Launch",
            "dependsOrder": "sequence",
            "dependsOn": ["Build", "Launch"]
        }
    ]
}